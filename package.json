{
  "name": "quizz",
  "version": "0.0.0",
  "description": "",
  "main": "build/server/index.js",
  "dependencies": {
    "easyrtc": "^1.0.15",
    "ejs": "^2.3.4",
    "express": "^4.13.3",
    "immutable": "~3.7.6",
    "rx": "^4.0.7"
  },
  "devDependencies": {
    "babel": "~6.3.26",
    "babel-cli": "^6.3.17",
    "babel-preset-es2015": "~6.3.13",
    "babel-preset-react": "~6.3.13",
    "babel-tape-runner": "~2.0.0",
    "browserify": "^12.0.1",
    "livereload": "^0.4.0",
    "nodemon": "~1.8.1",
    "parallelshell": "~2.0.0",
    "rimraf": "~2.5.0",
    "tap-spec": "~4.1.1",
    "tape": "~4.4.0",
    "uglifyjs": "~2.4.10",
    "watchify": "^3.6.1"
  },
  "scripts": {
    "clean": "rimraf dist && mkdir -p dist && mkdir -p dist/public",

    "prebuild": "npm run clean",
    "build:js": "babel src -d dist && browserify dist/client/index.js > dist/public/client.js",
    "build:css": "sass --update src/client/css:dist/public/stylesheets",
    "build": "parallelshell 'npm run build:js' 'npm run build:css'",

    "watch:babel": "parallelshell 'babel src -w -d dist' ''",
    "watch:browserify": "watchify dist/client/index.js -o dist/public/client.js",
    "watch:css": "sass --watch src/client/css:dist/public/stylesheets",
    "watch": "parallelshell 'npm run watch:babel' 'npm run watch:browserify' 'npm run watch:css'",
    "livereload": "livereload dist/public",
    "dev": "parallelshell 'npm run livereload' 'npm run watch'",

    "test": "babel-tape-runner test/**/*.js | tap-spec",

    "prestart": "npm run build && npm run test",
    "quickstart": "node dist/server/index.js",
    "start": "npm run quickstart"
  },
  "author": "Julien Pradet <julien@pradet.me> (http://julien.pradet.me/)",
  "license": "MIT"
}
