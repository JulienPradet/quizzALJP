{
  "name": "quizz",
  "version": "0.0.0",
  "description": "",
  "main": "build/server/index.js",
  "dependencies": {
    "immutable": "~3.7.6"
  },
  "devDependencies": {
    "babel": "~6.3.26",
    "babel-preset-es2015": "~6.3.13",
    "tape": "~4.4.0",
    "babel-tape-runner": "~2.0.0",
    "babel-preset-react": "~6.3.13",
    "rimraf": "~2.5.0",
    "nodemon": "~1.8.1",
    "parallelshell": "~2.0.0",
    "live-reload": "~1.1.0",
    "uglifyjs": "~2.4.10",
    "tap-spec": "~4.1.1"
  },
  "scripts": {
    "clean": "rimraf dist/*",

    "prebuild": "npm run clean -s",
    "build:js": "babel src -d dist && browserify dist/client/index.js | uglifyjs > dist/client.js",
    "build": "parallelshell 'npm run build:js -s'",

    "watch:js": "parallelshell 'babel src -w -d dist' ''",
    "watch": "parallelshell 'npm run watch:js -s'",

    "test": "babel-tape-runner test/**/*.js | tap-spec",

    "live-reload": "live-reload --port 9091 dist/",
    "dev": "parallelshell 'npm run live-reload -s' 'npm run watch -s'",

    "start": "node build/server/index.js"
  },
  "author": "Julien Pradet <julien@pradet.me> (http://julien.pradet.me/)",
  "license": "MIT"
}
